# Lichess API Configuration
LICHESS_API_TOKEN=your_lichess_api_token_here

# Database Configuration
DATABASE_URL=sqlite:///./chess_openings.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# Data Collection Settings
UPDATE_INTERVAL_HOURS=6
MAX_REQUESTS_PER_MINUTE=60
RATING_RANGES=["1000", "1200", "1400", "1600", "1800", "2000", "2200", "2500"]
TIME_CONTROLS=["ultraBullet", "bullet", "blitz", "rapid", "classical"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/chess_openings.log